# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		font pango:Inconsolata,FontAwesome 14
 		position top
		tray_output none
		status_command  ~/.local/bin/bumblebee-status \
        -m progress spacer network spacer cpu disk:root memory spacer battery-upower spacer pasink pasource spacer date time \
		-p disk.format="{percent:05.02f}%" \
		   disk.system="SI" \
		   root.path=/ \
		   memory.format="{percent:05.02f}%" \
           time.format="%H:%M CW %V" \
		   date.format="%b %d" \
           thunderbird.inboxes="imap.kit.edu/INBOX.msf" \
		-t iceberg-powerline
		colors {
			background $base
			separator $foam
                               #<border> <background> <text>
			focused_workspace  $pine $pine #ffffff
			active_workspace   $base $highlightlow    $text
			inactive_workspace $base $surface $text
			urgent_workspace   $rose $rose $text
			binding_mode       #2f343a #900000 #ffffff
		} 
}



